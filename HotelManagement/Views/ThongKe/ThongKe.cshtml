    <h1>@ViewBag.nam</h1>
    <script type="text/javascript">
       @{
           List<double> doanhthu= new List<double>();
           doanhthu = ViewBag.thunhap;

       }
        var giatri = "@ViewBag.valu";
        var array = giatri.split(" ");
        var a = [];
        for (var i = 0; i < array.length; i++) {
            var c = Number(array[i]);
            a.push(c);
        }

            var chart = new Highcharts.Chart({
            chart: {


            renderTo: 'container',
                            type: 'column',
                            options3d: {


                enabled: true,
                                alpha: 15,
                                beta: 15,
                                depth: 50,
                                viewDistance: 25
                }
            },
            title: {
            text: 'Doanh Thu Tháng'
            },

            plotOptions: {
            column: {
                depth: 50
                }
            },
                series: [{
                    data: a
            }]
        });


        // Activate the sliders
        $('#sliders input').on('input change', function () {
                chart.options.chart.options3d[this.id] = parseFloat(this.value);
                showValues();
                chart.redraw(false);
            });

        showValues();

    </script>

    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            $(".tab-header li a").click(function () {
                var tabid = $(this).attr("href");

                $(".tab-header li a , .content-card").removeClass("active");

                $(this).addClass("active");

                $(tabid).addClass("active");
            });
        });
    </script>
</body>
