
@{
    ViewBag.Title = "SoSanhDoanhThu";
}
@section header{

}

<html>
<head>
    <style>

        .tabs {
            width: 100%;
            height: auto;
            margin: 0 auto;
            background-color: white;
        }

            .tabs .tab-header {
                display: flex;
                flex-wrap: nowrap;
                overflow-x: auto;
                margin-top: -58px;
            }

                .tabs .tab-header li {
                    display: inline;
                }

                    .tabs .tab-header li a {
                        color: grey;
                        text-decoration: none;
                        font-size: 14px;
                        font-family: raleway;
                        font-weight: 700;
                        padding: 15px;
                    }

                        .tabs .tab-header li a.active {
                            border-bottom: 3px solid deepskyblue;
                            color: deepskyblue;
                        }

                        .tabs .tab-header li a:hover {
                            opacity: 0.5;
                        }

        .tab-content {
            width: 100%;
            display: inline-block;
            background-color: #fff;
            /*padding-bottom:40px;*/
            min-height: 400px;
        }

        .content-card {
            display: none;
        }

            .content-card .active {
                display: block;
            }

        .card {
            box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
            transition: 0.3s;
            width: 100%;
            border-radius: 5px;
            /*transform:translate(-50%,-50%);*/
        }

        .infor-admin {
            margin-left: 15px;
            margin-right: 15px;
            background-color: aqua;
        }


        .card-header {
            background-color: rgb(0,127,255);
            color: white;
            font-size: 16px;
            font-weight: bold;
            font-family: sans-serif;
        }

        .card .card-header p {
            color: white;
            text-align: left;
            font-size: 20px;
            font-weight: 700;
            float: left;
        }

        .card .card-header .refresh-admin {
            width: 40px;
            height: 40px;
            float: right;
            background-color: red;
            border-radius: 50%;
            border: 1px solid red;
            cursor: pointer;
            padding: 5px;
            transform: translate(5px,40px);
        }

        .Form-Email .email-content input[type=text], input[type=password] {
            width: 100%;
            padding: 12px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }

        .Form-Email .email-content .container button {
            background-color: white;
            color: rgb(0,127,255);
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
            cursor: pointer;
            width: 100%;
        }

            .Form-Email .email-content .container button:hover {
                opacity: 0.8;
            }

        .Form-Email .email-content .container {
            padding: 16px;
        }


        span.psw {
            float: right;
            padding-top: 16px;
        }

        .Form-Email {
            display: none;
            position: absolute;
            z-index: 1;
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow: auto;
            background-color: rgb(0,0,0);
            background-color: rgba(0,0,0,0.4);
            padding-top: 60px;
        }

        .email-content {
            background-color: #fefefe;
            margin: 5% auto 15% auto;
            border: 1px solid #888;
            width: 80%;
            position: relative;
        }

        .close {
            position: relative;
            right: 25px;
            top: 0;
            color: #000;
            font-size: 35px;
            font-weight: bold;
        }

            .close:hover,
            .close:focus {
                color: red;
                cursor: pointer;
            }

        .animate {
            -webkit-animation: animatezoom 0.6s;
            animation: animatezoom 0.6s
        }


        @@-webkit-keyframes animatezoom {
            from {
                -webkit-transform: scale(0)
            }

            to {
                -webkit-transform: scale(1)
            }
        }

        @@keyframes animatezoom {
            from {
                transform: scale(0)
            }

            to {
                transform: scale(1)
            }
        }


        @@media screen and (max-width: 300px) {
            span.psw {
                display: block;
                float: none;
            }

            .savebtn {
                width: 100%;
            }

            .notsavebtn {
                width: 100%;
            }
        }
    </style>
    <style>
        .highcharts-figure, .highcharts-data-table table {
            min-width: 360px;
            max-width: 800px;
            margin: 1em auto;
        }

        .highcharts-data-table table {
            font-family: Verdana, sans-serif;
            border-collapse: collapse;
            border: 1px solid #EBEBEB;
            margin: 10px auto;
            text-align: center;
            width: 100%;
            max-width: 500px;
        }

        .highcharts-data-table caption {
            padding: 1em 0;
            font-size: 1.2em;
            color: #555;
        }

        .highcharts-data-table th {
            font-weight: 600;
            padding: 0.5em;
        }

        .highcharts-data-table td, .highcharts-data-table th, .highcharts-data-table caption {
            padding: 0.5em;
        }

        .highcharts-data-table thead tr, .highcharts-data-table tr:nth-child(even) {
            background: #f8f8f8;
        }

        .highcharts-data-table tr:hover {
            background: #f1f7ff;
        }
    </style>
</head>
<body>
    <script src="https://code.highcharts.com/highcharts.js"></script>
    <script src="https://code.highcharts.com/modules/exporting.js"></script>
    <script src="https://code.highcharts.com/modules/export-data.js"></script>
    <script src="https://code.highcharts.com/modules/accessibility.js"></script>
    @using HotelManagement.Models;
    @using HotelManagement.DaTa_Access_Object
    <div class="tabs">
        <ul class="tab-header">
            <li><a href="#tab1" class="active">Doanh Thu</a></li>

        </ul>

        <div class="tab-content">
            @*so sánh doanh thu các năm*@
            <div id="tab1" class="content-card active">
                <form class="infor-admin" action="/ThongKe/SoSanhDoanhThu" method="post">
                    <div class="card">
                        <ul>
                            <input name="nam1" type="text" style="width:200px; left:100px" />
                            <br />
                            <br />
                            <input name="nam2" type="text" style="width:200px; left:100px" />
                            <button type="submit"> Xuất </button>
                        </ul>

                        <figure class="highcharts-figure">
                            <div id="container" style="height:600px; width:900px" ></div>
                          
                        </figure>

                    </div>
                </form>
            </div>


        </div>
    </div>

    <script type="text/javascript">

        var doanhthunam1 = "@ViewBag.valuenam1";
        var doanhthunam2 = "@ViewBag.valuenam2";
        var arraynam1 = doanhthunam1.split(" ");
        var arraynam2 = doanhthunam2.split(" ");
        var nam1 = '@ViewBag.nam1';
        var nam2 = '@ViewBag.nam2';
        var x='aaa'
        var a = [];
        var b = [];
        for (var i = 0; i < arraynam1.length; i++) {
            var c = Number(arraynam1[i]);
            a.push(c);
        }
        for (var i = 0; i < arraynam2.length; i++) {
            var c = Number(arraynam2[i]);
            b.push(c);
        }

            var chart = new Highcharts.chart('container', {
    chart: {
        type: 'line'
    },
    title: {
        text: 'Monthly Average Temperature'
    },
   
    xAxis: {
        categories: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec']
    },
    yAxis: {
        title: {
            text: 'Temperature (°C)'
        }
    },
    plotOptions: {
        line: {
            dataLabels: {
                enabled: true
            },
            enableMouseTracking: false
        }
    },
                series: [{
                    name: nam1,
        data: a
    }, {
        name: nam2,
        data: b
    }]
});
    </script>

    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {

            $(".tab-header li a").click(function () {
                var tabid = $(this).attr("href");

                $(".tab-header li a , .content-card").removeClass("active");

                $(this).addClass("active");

                $(tabid).addClass("active");
            });
        });
    </script>
</body>
</html>



