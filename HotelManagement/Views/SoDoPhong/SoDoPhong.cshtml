            }

            .button-room-trong {
                width: 90px;
                height: 40px;
                float: left;
                margin: 5px;
                background-color: green;
                border: 2px solid #4CAF50;
                border-radius: 5px;
                color: white;
                font-weight: bold;
                font-size: 16px;
                text-align: center;
                vertical-align: middle;
            }

            .button-room-nhanphong {
                width: 140px;
                height: 40px;
                float: left;
                margin: 5px;
                background-color: deeppink;
