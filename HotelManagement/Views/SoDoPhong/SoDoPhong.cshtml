            }

            .button-room-ban {
                width: 70px;
                height: 40px;
                float: left;
                margin: 5px;
                background-color: saddlebrown;
                border: 2px solid #8b4513;
                border-radius: 5px;
                color: white;
                font-weight: bold;
                font-size: 16px;
                text-align: center;
                vertical-align: middle;
            }

            .input-room {
                all: unset;
                width: 200px;
                height: 30px;
                position: absolute;
                left: 5px;
                margin: 5px;
                background-color: wheat;
                border: none;
                top: 70px;
                border-radius: 5px;
                border-color: red;
                text-align: left;
                font-size: 14px;
                color: black;
            }

            .room {
                width: 255px;
                height: 120px;
                
                float: left;
                margin-left: 20px;
                margin-top: 20px;
            }

            .room-left {
                width: 70px;
                height:120px;
                float: left;
               
                position: relative;
            }

            .room-left-number {
                font-size: 20px;
                height: 30px;
                margin: 0;
                text-align: center;
                color: white;
                font-weight: bold;
            }

            .room-left-type {
                padding-top: 5px;
                color: white;
                font-size: 12px;
                height: 30px;
                margin: 0;
                text-align: center;
