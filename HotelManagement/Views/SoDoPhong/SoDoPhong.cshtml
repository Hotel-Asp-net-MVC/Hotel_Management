
@{
    ViewBag.Title = "SoDoPhong";
}0

@section header{
    <!DOCTYPE html>
    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Room Management</title>
        <style>

            .modal-content {
                border: none;
                border-radius: 2px;
                box-shadow: 0 16px 28px 0 rgba(0,0,0,0.22),0 25px 55px 0 rgba(0,0,0,0.21);
            }

            .modal-header {
                border-bottom: 0;
                padding-top: 15px;
                padding-right: 26px;
